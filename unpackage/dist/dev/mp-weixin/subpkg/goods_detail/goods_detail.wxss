swiper {
  height: 750rpx;
}
.img {
  width: 100%;
  height: 100%;
}
.goodsbox {
  padding: 20rpx;
  padding-right: 0;
}
.goodsbox .price {
  color: #c00000;
  font-size: 36rpx;
  margin: 20rpx 0;
}
.goodsbox .price text {
  font-size: 24rpx;
  color: #000000;
}
.goodsbox .body {
  display: flex;
  justify-content: space-between;
}
.goodsbox .name {
  font-size: 50rpx;
  padding-right: 20rpx;
}
.goodsbox .fav {
  width: 240rpx;
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
  color: gray;
  justify-content: center;
  align-items: center;
  border-left: 2rpx solid #efefef;
}
.yunfei {
  margin: 20rpx 0;
  font-size: 24rpx;
  color: gray;
  display: flex;
  justify-content: left;
}
.container {
  padding-bottom: 100rpx;
}
.nav {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
