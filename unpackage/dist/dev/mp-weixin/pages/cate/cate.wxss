.scroll-view-container {
  display: flex;
}
.scroll-view-container .left-scroll-view {
  width: 120rpx;
}
.scroll-view-container .left-scroll-view .left-view-item {
  line-height: 123rpx;
  background-color: #f7f7f7;
  text-align: center;
  font-size: 24rpx;
}
.scroll-view-container .left-scroll-view .left-view-item.active {
  background-color: #ffffff;
  position: relative;
}
.scroll-view-container .left-scroll-view .left-view-item.active::before {
  content: '';
  display: block;
  width: 6rpx;
  height: 60rpx;
  background-color: #00aa00;
  position: absolute;
  left: 0;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}
